<% provide :title, "All users" %>
<h1>All users</h1>

<%= will_paginate @users%>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if user != current_user %>
        <%= link_to "Delete", [:admin, user], method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger pull-right" %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate @users%>
